@model BLL.UsersVM
@using BLL;
@Html.ActionLink("Create", "Create")

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(UserVM user in Model.Users)
        {
            <tr>
                <td>@user.UserID</td>
                <td>@user.Email</td>
                <td>@Html.ActionLink("Edit, ", "Edit", new {ID = user.UserID})</td>
                <td>@Html.ActionLink("Reset Password, ", "ResetPassword", new { ID = user.UserID })</td>
                <td>@Html.ActionLink("Change Password, ", "ChangePassword", new { ID = user.UserID })</td>
                <td>@Html.ActionLink("Delete", "Delete", new { ID = user.UserID })</td>
            </tr>
        }
    </tbody>
</table>